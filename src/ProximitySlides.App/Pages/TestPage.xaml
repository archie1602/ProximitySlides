<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="ProximitySlides.App.Pages.TestPage"
             xmlns:viewModels="clr-namespace:ProximitySlides.App.ViewModels"
             x:DataType="viewModels:TestViewModel">

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior
            EventName="Appearing"
            Command="{Binding AppearingCommand}" />

        <toolkit:EventToCommandBehavior
            EventName="Disappearing"
            Command="{Binding DisappearingCommand}" />
    </ContentPage.Behaviors>

    <Grid>
        <Border Stroke="Black"
                BackgroundColor="#1a1a1a"
                StrokeThickness="2"
                Padding="0"
                HorizontalOptions="Center"
                HeightRequest="400"
                WidthRequest="350">

            <Border.StrokeShape>
                <RoundRectangle CornerRadius="10,10,10,10" />
            </Border.StrokeShape>

            <Grid RowDefinitions=".75*, .25*"
                  ColumnDefinitions=".25*, .50*, .25*">
                
                <Image Grid.ColumnSpan="3"
                       Source="{Binding ActiveSlide}" />
                

                <ImageButton Grid.Row="1"
                     Source="navigation_left_arrow.png"
                     WidthRequest="50"
                     HeightRequest="50"
                     HorizontalOptions="Center"
                     VerticalOptions="Center" />

                <ImageButton Grid.Row="1"
                     Grid.Column="2"
                     Source="navigation_right_arrow.png"
                     WidthRequest="50"
                     HeightRequest="50"
                     HorizontalOptions="Center"
                     VerticalOptions="Center" />


            </Grid>
        </Border>
    </Grid>

</ContentPage>