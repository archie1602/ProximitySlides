    <Grid RowDefinitions="100, Auto, *, Auto"
          ColumnDefinitions=".50*, .50*"
          BackgroundColor="#ffec99">

        <Frame Margin="10,0,0,0" BorderColor="Gray" HeightRequest="50">
            <Entry IsEnabled="False" />
        </Frame>

        <Label Margin="20, 0, 10, 0"
               TextColor="Gray"
               MaxLines="1"
               Text="{Binding FileNameText}"
               HorizontalOptions="StartAndExpand"
               VerticalOptions="CenterAndExpand" />

        <Button Margin="10,0,10,0"
                Grid.Column="1"
                HeightRequest="50"
                Text="Select"
                Command="{Binding FilePickerButtonClickedCommand}" />

        <Button Grid.Row="1"
                Grid.ColumnSpan="2"
                HeightRequest="50"
                Text="Upload"
                Margin="10,0,10,0"
                Command="{Binding UploadFileButtonClickedCommand}" />

        <CollectionView Grid.Row="2" Grid.ColumnSpan="2"
                        Margin="10"
                        BackgroundColor="#616161">

            <CollectionView.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>abc.pdf</x:String>
                    <x:String>some_presentation_file.pdf</x:String>
                    <x:String>anothet_presentation_file.pdf</x:String>
                    <x:String>1_anothet_presentation_file.pdf</x:String>
                    <x:String>2_anothet_presentation_file.pdf</x:String>
                    <x:String>3_anothet_presentation_file.pdf</x:String>
                    <x:String>4_anothet_presentation_file.pdf</x:String>
                    <x:String>5_anothet_presentation_file.pdf</x:String>
                    <x:String>6_anothet_presentation_file.pdf</x:String>
                </x:Array>
            </CollectionView.ItemsSource>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="0,5"
                          Margin="10,0,10,0">
                        <Frame>
                            <Label Text="{Binding .}"
                                   FontSize="20" />
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>

        <Button Grid.Row="3"
                Grid.ColumnSpan="2"
                HeightRequest="50"
                Text="Start"
                Margin="10,0,10,10"
                Command="{Binding StartButtonClickedCommand}" />
        
    </Grid>
