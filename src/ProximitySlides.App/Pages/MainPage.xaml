<?xml
    version="1.0"
    encoding="utf-8"?>

<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ProximitySlides.App.Pages.MainPage"
    xmlns:viewModels="clr-namespace:ProximitySlides.App.ViewModels"
    x:DataType="viewModels:MainViewModel"
    Title="Home">

    <VerticalStackLayout
        Spacing="10"
        Margin="10">

        <Button
            Text="Speaker"
            Command="{Binding NavigateToSpeakerCommand}" />

        <Button
            Text="Listener"
            Command="{Binding NavigateToListenerCommand}" />

        <Button
            Text="Benchmark.Speaker"
            Command="{Binding NavigateToBenchmarkSpeakerCommand}" />

        <Button
            Text="Benchmark.Listener"
            Command="{Binding NavigateToBenchmarkListenerCommand}" />

    </VerticalStackLayout>

</ContentPage>
